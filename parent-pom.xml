    <prerequisites>
        <maven>3.1.1</maven>
    </prerequisites>
    <repositories>
        <repository>
            <id>MRISS-Projects-maven-repo</id>
            <url>https://raw.githubusercontent.com/MRISS-Projects/maven-repo/master</url>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>MRISS-Projects-maven-repo</id>
            <url>https://raw.githubusercontent.com/MRISS-Projects/maven-repo/master</url>
            <releases>
                <enabled>true</enabled>
            </releases>
        </pluginRepository>
    </pluginRepositories>
    <distributionManagement>
        <site>
            <id>github.website</id>
            <url>${site.deployment}/${release.type}/</url>
        </site>
        <repository>
            <id>releases</id>
            <name>Main Releases</name>
            <url>${deploymentUrl}</url>
        </repository>
    </distributionManagement>
    <profiles>
        <profile>
            <id>product-release-deployment</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <release.type>releases</release.type>
                <project.scm.id>github</project.scm.id>
                <deploymentUrl>file://${project.build.directory}/maven-repo</deploymentUrl>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-clean-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>clean-site-temporary-folder</id>
                                <phase>clean</phase>
                                <goals>
                                    <goal>clean</goal>
                                </goals>
                                <configuration>
                                    <filesets>
                                        <fileset>
                                            <directory>/tmp/sites</directory>
                                            <includes>
                                                <include>snapshots/**</include>
                                                <include>releases/**</include>
                                            </includes>
                                        </fileset>
                                    </filesets>
                                </configuration>
                                <inherited>false</inherited>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-site-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>attach-site-descriptor</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>attach-descriptor</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-changes-plugin</artifactId>
                        <version>${changes.plugin.version}</version>
                        <configuration>
                            <onlyCurrentVersion>true</onlyCurrentVersion>
                            <failOnError>false</failOnError>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-publish-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <id>publish-to-github</id>
                                <phase>site-deploy</phase>
                                <goals>
                                    <goal>publish-scm</goal>
                                </goals>
                                <configuration>
                                    <serverId>github.com</serverId>
                                    <scmBranch>gh-pages</scmBranch>
                                    <checkinComment>Publishing DSH site
                                        ${project.version}</checkinComment>
                                    <pubScmUrl>scm:git:https://github.com/MRISS-Projects/dsh</pubScmUrl>
                                    <content>/tmp/sites</content>
                                    <skipDeletedFiles>true</skipDeletedFiles>
                                </configuration>
                            </execution>
                            <execution>
                                <id>publish-artifact-to-github</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>publish-scm</goal>
                                </goals>
                                <configuration>
                                    <serverId>github.com</serverId>
                                    <checkinComment>Publishing artifact for version ${project.version}</checkinComment>
                                    <pubScmUrl>scm:git:https://github.com/MRISS-Projects/maven-repo</pubScmUrl>
                                    <content>${project.build.directory}/maven-repo</content>
                                    <checkoutDirectory>${project.build.directory}/artifact-deploy-checkout</checkoutDirectory>
                                    <skipDeletedFiles>true</skipDeletedFiles>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <reporting>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-changes-plugin</artifactId>
                        <version>${changes.plugin.version}</version>
                        <configuration>
                            <onlyCurrentVersion>true</onlyCurrentVersion>
                            <failOnError>false</failOnError>
                        </configuration>
                    </plugin>
                </plugins>
            </reporting>
        </profile>
        <profile>
            <id>deployment</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <project.scm.id>github</project.scm.id>
                <deploymentUrl>file://${project.build.directory}/maven-repo</deploymentUrl>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-clean-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>clean-site-temporary-folder</id>
                                <phase>clean</phase>
                                <goals>
                                    <goal>clean</goal>
                                </goals>
                                <configuration>
                                    <filesets>
                                        <fileset>
                                            <directory>/tmp/sites</directory>
                                            <includes>
                                                <include>snapshots/**</include>
                                                <include>releases/**</include>
                                            </includes>
                                        </fileset>
                                    </filesets>
                                </configuration>
                                <inherited>false</inherited>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-publish-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <id>publish-to-github</id>
                                <phase>site-deploy</phase>
                                <goals>
                                    <goal>publish-scm</goal>
                                </goals>
                                <configuration>
                                    <serverId>github.com</serverId>
                                    <scmBranch>gh-pages</scmBranch>
                                    <checkinComment>Publishing DSH site
                                        ${project.version}</checkinComment>
                                    <pubScmUrl>scm:git:https://github.com/MRISS-Projects/dsh</pubScmUrl>
                                    <content>/tmp/sites</content>
                                    <skipDeletedFiles>true</skipDeletedFiles>
                                </configuration>
                            </execution>
                            <execution>
                                <id>publish-artifact-to-github</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>publish-scm</goal>
                                </goals>
                                <configuration>
                                    <serverId>github.com</serverId>
                                    <checkinComment>Publishing artifact for version ${project.version}</checkinComment>
                                    <pubScmUrl>scm:git:https://github.com/MRISS-Projects/maven-repo</pubScmUrl>
                                    <content>${project.build.directory}/maven-repo</content>
                                    <checkoutDirectory>${project.build.directory}/artifact-deploy-checkout</checkoutDirectory>
                                    <skipDeletedFiles>true</skipDeletedFiles>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>